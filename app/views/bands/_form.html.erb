<%= render partial: 'errors', locals: {model: @band} %>
<br><br>
<%= form_for @band do |f| %>
    <%= f.label "Name: " %>
    <%= f.text_field :name %>
    

    <h3>Choose Band Members: </h3>
    <%= f.collection_check_boxes :member_ids, Member.all, :id, :name %>
    <br><br>

    <%= f.fields_for :members, @band.members.build do |members_fields| %>
        <%= members_fields.label :name, "New Band Member" %>
        <%= members_fields.text_field :name %>
        <br><br>
    <% end %>

    <%= f.submit %>
<% end %>