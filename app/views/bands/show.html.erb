<h1><%= @band.name %></h1>
<ul>
    <% @band.members.each do |member| %>
        <li>
            <%= link_to member.name, member_path(member) %> - 
            <%= get_band_member(member, @band).instrument %> - 
            <%= link_to "Edit Instrument", edit_band_member_path(get_band_member(member, @band)) %>
        </li> 
    <% end %>
</ul>
<br>
<%= link_to "Edit Members", edit_band_path(@band) %>
<br><br>
<%= link_to 'Delete Band', band_path(@band), method: :delete, data: { confirm: "Are you sure?" }%>